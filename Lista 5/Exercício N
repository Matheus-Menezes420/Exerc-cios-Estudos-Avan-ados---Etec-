#include <stdio.h>
void main() {
    int MatA[7][7],i,j,contador=0;
    for (i = 0; i < 7; i++) {
        for (j = 0; j < 7; j++) {
            printf("Digite o valor do elemento [%d][%d]: ", j+1, i+1);
            scanf("%d", &MatA[j][i]);
            if ((j%2==0)&&(i%2==0)) {
               contador++
            }
        }
    }
    printf("\n");
    printf("Numero de pares: %d",contador);
}